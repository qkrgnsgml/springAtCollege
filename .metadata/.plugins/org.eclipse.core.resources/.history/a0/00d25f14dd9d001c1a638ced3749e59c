<%@page import="java.util.Random"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ page session="false" contentType="text/html; charset=UTF-8"%>
<html>
<head>
	<title>로또 보기</title>
</head>
<body>
<%
	int[] lotto = new int[6];
	Random r = new Random();
	for(int i=0;i<6;i++){
		int lottoNum = r.nextInt(45)+1;
		for(int j=0;j<=i;j++){
			if(lottoNum==lotto[j]){
				lottoNum = r.nextInt(45)+1;
				break;
			}
		}
		lotto[i] = lottoNum;
		
	}
	
	out.print(lotto);
%>
</body>
</html>
